@model IEnumerable<AuthSystem.Models.Orden>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crear una nueva orden</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idMetodoPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idDireccion)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idMetodoPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idDireccion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idOrden">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idOrden">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idOrden">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>


